{
    "builders": [{
        "name": "virtualbox",
        "type": "virtualbox-iso",
        "iso_url": "boot2docker.iso",
        "iso_checksum": "e258919b42485e2882c71aa4255e267d",
        "iso_checksum_type": "md5",
        "boot_wait": "5s",
        "ssh_username": "docker",
        "ssh_password": "tcuser",
        "shutdown_command": "sudo poweroff",
        "guest_additions_mode": "disable",
        "guest_os_type": "Linux26_64",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "512"]
        ]
    }, {
        "name": "parallels",
        "type": "parallels-iso",
        "iso_url": "boot2docker.iso",
        "iso_checksum": "e258919b42485e2882c71aa4255e267d",
        "iso_checksum_type": "md5",
        "boot_wait": "15s",
        "ssh_username": "docker",
        "ssh_password": "tcuser",
        "shutdown_command": "sudo poweroff",
        "guest_os_type": "linux",
        "parallels_tools_flavor": "lin",
        "prlctl": [
            ["set", "{{.Name}}", "--memsize", "512"]
        ]
    },
    {
        "name": "vmware",
        "type": "vmware-iso",
        "iso_url": "boot2docker.iso",
        "iso_checksum": "e258919b42485e2882c71aa4255e267d",
        "iso_checksum_type": "md5",
        "boot_wait": "15s",
        "ssh_username": "docker",
        "ssh_password": "tcuser",
        "shutdown_command": "sudo poweroff",
        "guest_os_type": "other3xlinux-64"
    }],

    "provisioners": [{
        "type": "file",
        "source": "./files/bootlocal.sh",
        "destination": "/tmp/bootlocal.sh"
    },{
        "type": "file",
        "source": "./files/bootsync.sh",
        "destination": "/tmp/bootsync.sh"
    },
    {
        "type": "file",
        "source": "./files/docker-enter",
        "destination": "/tmp/docker-enter"
    },
     {
        "type": "shell",
        "inline": [
            "mkfs.ext4 -F -L boot2docker-data /dev/sda",
            "sudo /usr/local/etc/init.d/docker stop",
            "sudo /etc/rc.d/automount",
            "sudo cp /tmp/bootsync.sh /var/lib/boot2docker/bootsync.sh",
            "sudo chmod +x /var/lib/boot2docker/bootsync.sh",
            "sudo cp /tmp/bootlocal.sh /var/lib/boot2docker/bootlocal.sh",
            "sudo chmod +x /var/lib/boot2docker/bootlocal.sh",
            "sudo mkdir -p /var/lib/boot2docker/bin",
            "sudo cp /tmp/docker-enter /var/lib/boot2docker/bin/docker-enter",
            "sudo chmod +x /var/lib/boot2docker/bin/docker-enter"
        ]
    }],

    "post-processors": [{
        "type": "vagrant",
        "include": ["boot2docker.iso"],
        "vagrantfile_template": "vagrantfile.tpl",
        "output": "boot2docker-{{.Provider}}.box"
    }]
}
